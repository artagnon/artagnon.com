{
  "triggerTaskOnSave.tasks": {
    "clayoven": ["**/*.clay", "design/*", ".clayoven/*"]
  },
  "triggerTaskOnSave.restart": true,
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown", "latex", "plaintext", "claytext"],
  "spellright.parserByClass": {
    "claytext": {
      "parser": "markdown"
    }
  },
  "files.exclude": {
    "**/*.vo": true,
    "**/*.vok": true,
    "**/*.vos": true,
    "**/*.aux": true,
    "**/*.glob": true,
    "**/.git": true,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.ruby-lsp": true
  }
}
